{
  "name": "back-to-hills-registration-backend",
  "version": "1.0.0",
  "description": "Backend API for Back to Hills 4.0 Alumni Meet Registration",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "seed": "node scripts/seed.js",
    "migrate-reg-ids": "node scripts/migrate-registration-ids.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf node_modules package-lock.json",
    "fresh-install": "npm run clean && npm cache clean --force && npm install",
    "deploy": "npm ci --production && pm2 restart backend",
    "logs": "pm2 logs backend"
  },
  "keywords": [
    "alumni",
    "registration",
    "api",
    "express",
    "mongodb",
    "school-alumni"
  ],
  "author": "School Alumni Association",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "moment-timezone": "^0.6.0",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.6",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
