# NPM configuration for consistent dependency installation

# Use package-lock.json for deterministic installs
package-lock=true

# Ensure all dependencies are installed (not just production in CI)
production=false

# Prefer offline installation when package-lock exists
prefer-offline=true

# Strict engine version matching
engine-strict=true

# Save exact versions (not ranges)
save-exact=false

# Automatically install peer dependencies
legacy-peer-deps=false

